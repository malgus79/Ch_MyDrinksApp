<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/common_margin_default"
    android:layout_marginVertical="@dimen/common_margin_min"
    android:backgroundTint="?attr/colorOnSecondary"
    android:padding="@dimen/common_margin_min"
    app:cardCornerRadius="@dimen/common_corner_default"
    app:cardElevation="@dimen/common_margin_min">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcv_favorite_cocktail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/common_margin_item"
            android:layout_marginTop="@dimen/common_margin_item"
            android:clipToPadding="true"
            app:cardCornerRadius="@dimen/common_corner_min"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/img_favorite_cocktail"
                android:layout_width="180dp"
                android:layout_height="200dp"
                android:background="?attr/colorPrimaryVariant"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"
                tools:ignore="ContentDescription" />

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/txt_favorite_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/common_margin_default"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="@dimen/common_size_normal"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/mcv_favorite_cocktail"
            app:layout_constraintStart_toStartOf="@id/mcv_favorite_cocktail"
            app:layout_constraintTop_toBottomOf="@id/mcv_favorite_cocktail"
            tools:text="Margarita" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>